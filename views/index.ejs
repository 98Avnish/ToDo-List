<%- include("header"); -%>

<div class="box" id="heading">
  <h1>ToDo <%= listTitle %></h1>
</div>

<div class="box">

  <% items.forEach(item => { %>
    <div class="item">
      <input type="checkbox" name="" value="">
      <p> <%= item %> </p>
    </div>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" value="" placeholder="Add Item" autocomplete="off" required>
    <button type="submit" name="button" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer"); -%>
