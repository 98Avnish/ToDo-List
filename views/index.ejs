<%- include("header"); -%>

<div class="box" id="heading">
  <h1>ToDo <%= listTitle %></h1>
</div>

<div class="box">

  <% items.forEach(item => { %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" onChange="this.form.submit()" name="deleteItemId" value="<%= item._id %>">
        <p> <%= item.itemName %> </p>
        <input type="hidden" name="listTitle" value="<%= listTitle %>">
      </div>
    </form>
  <% }); %>

  <form class="item" action="/add" method="post">
    <input type="text" name="newItem" value="" placeholder="Add Item" autocomplete="off" required>
    <button type="submit" name="listTitle" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer"); -%>
